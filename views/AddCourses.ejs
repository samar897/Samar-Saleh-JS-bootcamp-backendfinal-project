<!-- views/home.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Register Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet"  href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <link rel="stylesheet"  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <style>
      body {
        padding-top: 20px;
        padding-bottom: 20px;
        background-image: url("/images/photo2.jpg");
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        background-size: cover;
      }
      .jumbotron {
        margin-top: 10px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <%- include('partials/navbar') %>
      <div class="jumbotron">
        <% if(typeof Course !== "undefined"){ %>
        <h1>Update the Courses</h1>
        <p class="lead">Please put all Courses Info </p>
          <h1>Updating the user: <%= data.InstructorName %></h1>
          <form action="/updateCourses/<%= data._id %>" method="post">
          <label> Course Name : </label>
          <input
            name="CourseName"
            class="form-control"
            type="text"
            placeholder="CourseName"
            aria-label="CourseName"
          />
          <label>Course Description: </label>
          <input
            name="CourseDescription"
            class="form-control"
            type="text"
            placeholder="CourseDescription"
            aria-label="CourseDescription"
          />
          <label> Course Start At </label><br />
          <input
            name="CourseStartAt"
            class="form-control"
            type="datetime"
            placeholder="CourseStartAt"
            aria-label="CourseStartAt"
          />
          <br />
          <label> Course End At  </label>
          <input
            name="CourseEndAt"
            class="form-control"
            type="datetime"
            placeholder="CourseEndAt"
            aria-label="CourseEndAt"
          /> 
          <button class="btn btn-danger"> Update </button>
        </form> 

        <%- include('partials/footer') %>
        <% } else { %>
          
        <h1>Adding new Course</h1>
        <p class="lead">Please Fill in all the blank fields </p>
        <form action="/CoursesRouter/AddnewCourses" method="post">
          <label> Course Name : </label>
          <input
            name="CourseName"
            class="form-control"
            type="text"
            placeholder="CourseName"
            aria-label="CourseName"
          />
          <label>Course Description: </label>
          <input
            name="CourseDescription"
            class="form-control"
            type="text"
            placeholder="CourseDescription"
            aria-label="CourseDescription"
          />
          <label> Course Start At </label><br />
          <input
            name="CourseStartAt"
            class="form-control"
            type="datetime"
            placeholder="CourseStartAt"
            aria-label="CourseStartAt"
          />
          <br />
          <label> Course End At  </label>
          <input
            name="CourseEndAt"
            class="form-control"
            type="datetime"
            placeholder="CourseEndAt"
            aria-label="CourseEndAt"
          /> 
            <br/> 
            <button class="btn btn-danger">Register</button>
            <a href="/login" class="btn btn-danger" style="float: right;"> login </a>
          </form> 
  
          <% }  %>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="list-group">
            <!-- loop over blog posts and render them -->
            LIST_OF_POSTS
          </div>
        </div>
      </div>
     
    </div>
  </body>
</html>
