<!-- views/home.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Instructor Login Form </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet"  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <style>
      body {
        font-family: Arial, Helvetica, sans-serif;
        padding-top: 20px;
        padding-bottom: 20px;
        background-image: url("/images/photo2.jpg");
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        background-size: cover;
      }
      .jumbotron {
        margin-top: 10px;
      }

    </style>
  </head>
  <body>
    <div class="container">
      <%- include('partials/navbar') %>
      <div class="jumbotron">
       <h2>  Welcome to Instructor Login Form  </h2>
        <h3>Please Login </h3>
        <form action="/in/Instructorlogin" method="post">
        
          <label> Instructor Email : </label>
          <input
            name="InstructorEmail"
            class="form-control"
            type="text"
            placeholder="InstructorEmail"
            aria-label="InstructorEmail"
          />
          <label>Instructor Password  : </label>
          <input
            name="InstructorPassword"
            class="form-control"
            type="password"
            placeholder="InstructorPassword"
            aria-label="InstructorPassword"
          />
          <br />
            <button class="btn btn-success">Login</button>
            <a href="/in/getInstructorRegister" class="btn btn-success" style="float: right;"> Register Here </a>
          </form> 
          
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="list-group">
            <!-- loop over blog posts and render them -->
            Log in Page
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
